{
    "name": "xterminal",
    "version": "2.1.17",
    "description": "Build web-based cli interfaces",
    "main": "./dist/xterminal.umd.js",
    "types": "./dist/types.d.ts",
    "files": [
        "dist",
        "./LICENSE.txt",
        "./README.md"
    ],
    "exports": {
        ".": {
            "import": {
                "types": "./dist/types.d.ts",
                "default": "./dist/xterminal.esm.js"
            },
            "require": {
                "types": "./dist/types.d.ts",
                "default": "./dist/xterminal.umd.js"
            }
        },
        "./dist/xterminal.css": "./dist/xterminal.css"
    },
    "keywords": [
        "terminal",
        "terminal-emulator",
        "command-line",
        "cli",
        "web"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/henryhale/xterminal.git"
    },
    "author": {
        "name": "Henry Hale",
        "url": "https://github.com/henryhale"
    },
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/henryhale/xterminal/issues"
    },
    "homepage": "https://github.com/henryhale/xterminal#readme",
    "type": "module",
    "scripts": {
        "clean": "rm -rf out dist",
        "build:ts": "tsc -b",
        "build:js": "rollup -c",
        "build:css": "postcss theme/index.css > dist/xterminal.css",
        "build": "pnpm clean && pnpm build:ts && pnpm build:js && pnpm build:css",
        "dev": "concurrently \"tsc -w\" \"rollup -c -w\" \"vite demo\"",
        "lint": "eslint source/ && prettier source/ --check",
        "lint:fix": "eslint --fix source/ && prettier source/ --write",
        "prepack": "pnpm build",
        "test": "echo \"Error: no test specified\" && exit 1",
        "prepare": "husky",
        "docs:dev": "vitepress dev docs",
        "docs:build": "vitepress build docs",
        "docs:preview": "vitepress preview docs",
        "release": "release-it"
    },
    "devDependencies": {
        "@babel/core": "^7.28.6",
        "@babel/preset-env": "^7.28.6",
        "@eslint/js": "^9.17.0",
        "@rollup/plugin-babel": "^6.1.0",
        "@rollup/plugin-replace": "^6.0.3",
        "@rollup/plugin-terser": "^0.4.4",
        "auto-changelog": "^2.5.0",
        "autoprefixer": "^10.4.23",
        "concurrently": "^9.2.1",
        "cssnano": "^7.1.2",
        "eslint": "^9.17.0",
        "globals": "^17.0.0",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.7",
        "postcss": "^8.5.6",
        "postcss-cli": "^11.0.1",
        "prettier": "^3.8.0",
        "release-it": "^19.2.3",
        "rollup": "^4.55.1",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.53.0",
        "vite": "^7.3.1",
        "vitepress": "^1.6.4"
    },
    "browserslist": [
        "last 4 versions",
        ">1%"
    ],
    "engines": {
        "node": ">=22",
        "pnpm": ">=10"
    },
    "lint-staged": {
        "*.ts": "pnpm lint:fix"
    }
}
