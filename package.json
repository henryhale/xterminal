{
  "name": "xterminal",
  "version": "2.1.11",
  "description": "Build web-based cli interfaces",
  "main": "./dist/xterminal.umd.js",
  "types": "./dist/types.d.ts",
  "files": [
    "dist",
    "./LICENSE.txt",
    "./README.md"
  ],
  "exports": {
    "import": {
      "types": "./dist/types.d.ts",
      "default": "./dist/xterminal.esm.js"
    },
    "require": {
      "types": "./dist/types.d.ts",
      "default": "./dist/xterminal.umd.js"
    }
  },
  "keywords": [
    "terminal",
    "terminal-emulator",
    "command-line",
    "cli",
    "web"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/henryhale/xterminal.git"
  },
  "author": {
    "name": "Henry Hale",
    "url": "https://github.com/henryhale"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/henryhale/xterminal/issues"
  },
  "homepage": "https://github.com/henryhale/xterminal#readme",
  "type": "module",
  "scripts": {
    "clean": "rm -rf out dist",
    "build:ts": "tsc -b",
    "build:js": "rollup -c",
    "build:css": "postcss theme/index.css > dist/xterminal.css",
    "build": "pnpm clean && pnpm build:ts && pnpm build:js && pnpm build:css",
    "dev": "concurrently \"tsc -w\" \"rollup -c -w\" \"vite demo\"",
    "lint": "eslint source/ && prettier source/ --check",
    "lint:fix": "eslint --fix source/ && prettier source/ --write",
    "prepack": "pnpm build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "release": "release-it"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@eslint/js": "^9.17.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-replace": "^6.0.2",
    "@rollup/plugin-terser": "^0.4.4",
    "auto-changelog": "^2.5.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "cssnano": "^7.0.6",
    "eslint": "^9.17.0",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "postcss": "^8.4.49",
    "postcss-cli": "^11.0.0",
    "prettier": "^3.4.2",
    "release-it": "^17.10.0",
    "rollup": "^4.28.1",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.1",
    "vite": "^6.0.4",
    "vitepress": "^1.5.0"
  },
  "browserslist": [
    "last 4 versions",
    ">1%"
  ],
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "lint-staged": {
    "*.ts": "pnpm lint:fix"
  }
}
