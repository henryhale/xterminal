{
    "git": {
        "tagName": "v${version}",
        "commitMessage": "chore(release): v${version}",
        "changelog": "CHANGELOG.md",
        "requireBranch": "master"
    },
    "changelogFile": "CHANGELOG.md",
    "github": {
        "release": true,
        "releaseName": "Release: XTerminal v${version}",
        "releaseNotes": "git log --pretty=format:'* %s %h' master...HEAD --no-merges",
        "assets": ["dist/"],
        "comments": true
    },
    "npm": {
        "publish": true,
        "skipChecks": true
    },
    "plugins": {
        "@release-it/conventional-changelog": {
            "preset": "angular",
            "infile": "CHANGELOG.md",
            "header": "# Changelog"
        }
    },
    "hooks": {
        "before:init": "git fetch --tags"
    }
}
