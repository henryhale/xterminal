{
    "git": {
        "tagName": "v${version}",
        "commitMessage": "chore(release): v${version}",
        "requireBranch": "master",
        "changelog": "npx auto-changelog --stdout --commit-limit false --unreleased --template https://raw.githubusercontent.com/release-it/release-it/main/templates/changelog-compact.hbs"
    },
    "changelogFile": "CHANGELOG.md",
    "github": {
        "release": true,
        "releaseName": "Release: XTerminal v${version}",
        "releaseNotes": "git log --pretty=format:'* %s %h' master...HEAD --no-merges",
        "assets": ["dist/"],
        "comments": true
    },
    "npm": {
        "publish": true,
        "skipChecks": true
    },
    "hooks": {
        "before:init": "git fetch --tags",
        "after:bump": "npx auto-changelog -p"
    }
}
